<Window x:Class="Window_Upgrader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTSDanmaku"
        mc:Ignorable="d"
        Title="KruinUpdates" Height="300" Width="600" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="插件更新" VerticalAlignment="Top" FontSize="17"/>
        <TextBlock x:Name="TextBlock_Status" HorizontalAlignment="Left" Margin="10,246,0,0" TextWrapping="Wrap" Text="就绪" VerticalAlignment="Top" Width="574" FontSize="11.5"/>
        <Button x:Name="Button_CheckUpd" Content="检查更新" HorizontalAlignment="Left" Margin="509,10,0,0" VerticalAlignment="Top" Width="75" ToolTip="通过弹幕姬 API 检查插件更新"/>
        <Button x:Name="Button_DLUpd" Content="下载更新" HorizontalAlignment="Left" Margin="509,34,0,0" VerticalAlignment="Top" Width="75" ToolTip="打开浏览器下载更新"/>
        <TextBlock x:Name="TextBlock_Latest" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="最新版本: （" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox_UpdContents" HorizontalAlignment="Left" Height="183" Margin="10,58,0,0" TextWrapping="Wrap" Text="Undefined（" VerticalAlignment="Top" Width="574" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="hidden" FontFamily="Consolas"/>
        <ProgressBar x:Name="ProgressBar_Indicator" HorizontalAlignment="Left" Height="15" Margin="484,248,0,0" VerticalAlignment="Top" Width="100" IsIndeterminate="True" RenderTransformOrigin="0.5,0.5" Visibility="Hidden">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>

    </Grid>
</Window>
